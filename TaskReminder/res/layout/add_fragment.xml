<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_pan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.taskreminder.MainActivity" >

    <CalendarView
        android:id="@+id/calender"
        android:layout_width="316dp"
        android:layout_height="350dp"
        android:visibility="gone"
        android:layout_weight="0.96" />
    
    <LinearLayout 
        android:id="@+id/timer"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:visibility="gone">
        
	        <Spinner
	            android:id="@+id/hours"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_marginRight="5dp"
	            android:entries="@array/hours"/>
	        
	        <Spinner
	            android:id="@+id/minutes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_marginRight="5dp"
	            android:entries="@array/minutes"/>
	        
	        <Spinner
	            android:id="@+id/am_pm"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" 
	            android:layout_marginRight="5dp"
	            android:entries="@array/am_pm"/>
	        
	        <Button 
	            android:id="@+id/set_time"
	            android:layout_width="45dp"
	            android:layout_height="40dp"
	            android:onClick="click_Action"
	            android:text="ok"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/date"
            android:layout_width="115dp"
            android:layout_height="28dp"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="Set Date"
            android:onClick="click_Action"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/time"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="Set Time"
            android:onClick="click_Action"
            android:inputType="number"
            android:textSize="15dp" />
        
        <EditText
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/note"
            android:layout_width="180dp"
            android:layout_height="65dp"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="Write Note"
            android:textSize="15dp" />

        <Button
            android:id="@+id/add_image"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:onClick="click_Action"
            android:text="Image"
            android:textAllCaps="false"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:onClick="click_Action"
            android:layout_marginTop="5dp" />
    </LinearLayout>
	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
	    <Button
	        android:id="@+id/add_note"
	        android:layout_width="wrap_content"
	        android:layout_height="38dp"
	        android:layout_marginTop="2dp"
	        android:onClick="click_Action"
	        android:text="Add Reminder"
	        android:textAllCaps="false"
	        android:textSize="15dp" />

	    <TextView
	        android:id="@+id/notifier"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text=" "
	        android:textColor="#ff00dd"
	        android:textSize="11dp" />
	    
	</LinearLayout>
	
   
    <TextView
        android:id="@+id/image_uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.96"
        android:text=""
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</LinearLayout>